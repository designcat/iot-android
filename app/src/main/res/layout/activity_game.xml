<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map_layout"
        android:orientation="vertical"
        android:background="@color/actionbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ステータス:"
                android:textSize="12dp"
                android:textColor="@color/text_white"
                android:layout_marginRight="8dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/map_status"
                android:textSize="12dp"
                android:textColor="@color/text_white"
                android:text="鬼"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ポイント:"
                android:textSize="12dp"
                android:textColor="@color/text_white"
                android:layout_marginRight="8dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/map_point"
                android:textSize="12dp"
                android:textColor="@color/text_white"
                android:text="1,000P"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="残り時間:"
                android:textSize="12dp"
                android:textColor="@color/text_white"
                android:layout_marginRight="8dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/map_time"
                android:textSize="12dp"
                android:textColor="@color/text_white"
                android:text="00:00:00"/>
        </LinearLayout>
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map_fragment"
            tools:context=".ui.GameActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/map_overlay_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ゲーム開始まであと"
            android:layout_marginBottom="8dp"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/ready_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/member_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">
        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/actionbar"
            android:fadingEdge="vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/member_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="メンバー募集中です。"
                android:gravity="center_horizontal"
                android:layout_margin="16dp"/>

            <ListView
                android:id="@+id/member_list_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_below="@+id/main_title"
                android:layout_margin="16dp"/>

            <Button
                android:id="@+id/member_start_btn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="ゲームスタート"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:layout_margin="16dp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
